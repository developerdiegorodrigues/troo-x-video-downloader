{
    "manifest_version": 3,
    "name": "Troo x-video downloader",
    "version": "1.0",
    "description": "An automatic video downloader for your favorite streaming platform",
    "author": "Diego Rodrigues - @devdiegorodrigues",
    "developer": {
        "name": "Diego Rodrigues - @devdiegorodrigues"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "declarativeContent",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "512": "img/icon_512.png",
        "128": "img/icon_128.png",
        "48": "img/icon_48.png",
        "32": "img/icon_32.png"
    },
    "host_permissions": [
        "https://www.xvideos.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "view/content.html",
                "view/style.css",
                "pageScript.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
