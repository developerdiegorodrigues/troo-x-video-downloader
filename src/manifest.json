{
    "manifest_version": 2,
    "name": "Troo x-video downloader",
    "version": "1.0",
    "description": "An automatic video downloader for your favorite streaming platform",
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}